@model BrightIdeas.Models.newUser

<h2>Registration</h2>
<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="name"></span>
        <label asp-for="name"></label>
        <input class="form-control" asp-for="name">
    </div>    

    <div class="form-group">
        <span asp-validation-for="alias"></span>
        <label asp-for="alias"></label>
        <input class="form-control" asp-for="alias">
    </div>    

    <div class="form-group">
        <span asp-validation-for="email"></span>
        <label asp-for="email"></label>
        <input class="form-control" asp-for="email">
    </div>    
    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label asp-for="password"></label>
        <input class="form-control" asp-for="password">
    </div>    
    <div class="form-group">
        <span asp-validation-for="confirm"></span>
        <label asp-for="confirm"></label>
        <input class="form-control" asp-for="confirm">
    </div>    
    <div class="form-group">
    <input type="submit" value="Register">
    </div>
</form>